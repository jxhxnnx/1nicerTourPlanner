<Window x:Class="_1nicerTourPlanner.FilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:_1nicerTourPlanner.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:FilesVM}"
        mc:Ignorable="d"
        Title="FilesWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Files for Tour:" Margin="5,5,5,5" VerticalAlignment="Center" />
                <TextBlock Text="{Binding CurrentTour.Name}" Margin="5,5,5,5" VerticalAlignment="Center" />
            </StackPanel>
            
            <ListBox x:Name="listTours"
                                ItemsSource="{Binding Files, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding CurrentFile, Mode=TwoWay}"
                                Margin="0,5,0,0" />
            <Button  Width="100" Margin="5,5,5,0" Command="{Binding OpenFileCommand}">
                Open File
            </Button>
            <TextBlock Text="{Binding OpenMessage}" Margin="5,5,5,5" />
        </StackPanel>
    </Grid>
</Window>
