<Window x:Class="_1nicerTourPlanner.TourLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:_1nicerTourPlanner.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:TourLogVM}"
        mc:Ignorable="d"
        Title="TourLogWindow" Height="450" Width="600">
    <Grid>
        <DataGrid AutoGenerateColumns="False"
                              ItemsSource="{Binding Logs}"
                              Margin="5,10,0,0"
                              HorizontalAlignment="Left" 
                              Name="LogGrid" 
                              VerticalAlignment="Top" 
                              Width="600">
            <DataGrid.Columns >
                <DataGridTextColumn Header="Name" Binding="{Binding Path=name}" Width="70" />
                <DataGridTextColumn Header="Date" Binding="{Binding Path=date}" Width="70" />
                <DataGridTextColumn Header="Distance" Binding="{Binding Path=distance}" Width="70" />
                <DataGridTextColumn Header="Total Time" Binding="{Binding Path=total_time}" Width="70" />
                <DataGridTextColumn Header="Rating" Binding="{Binding Path=rating}" Width="70" />
                <DataGridTextColumn Header="Report" Binding="{Binding Path=report}" Width="250" />
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
